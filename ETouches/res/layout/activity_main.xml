<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.echances.etouches.activities.MainActivity" >
    
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_above="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <RadioGroup 
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_navigation_bar"
        android:orientation="horizontal">
        <RadioButton
            android:button="@null" 
            android:id="@+id/tab_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:tag="1"
            android:onClick="TabSelected"
            android:text="Home"
            android:drawableTop="@drawable/tab_home_selector"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textColor="@drawable/tab_text_color_selector"
            android:clickable="true"/>
        
        <RadioButton
            android:button="@null" 
            android:id="@+id/tab_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:tag="2"
            android:onClick="TabSelected"
            android:text="Manage"
            android:drawableTop="@drawable/tab_manage_selector"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textColor="@drawable/tab_text_color_selector"
            android:clickable="true"/>
        
        <RadioButton
            android:button="@null" 
            android:id="@+id/tab_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:tag="3"
            android:onClick="TabSelected"
            android:text="Profile"
            android:drawableTop="@drawable/tab_profile_selector"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textColor="@drawable/tab_text_color_selector"
            android:clickable="true"/>
        <RadioButton
            android:button="@null" 
            android:id="@+id/tab_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:tag="4"
            android:onClick="TabSelected"
            android:text="Reservation"
            android:drawableTop="@drawable/tab_reservation_selector"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textColor="@drawable/tab_text_color_selector"
            android:clickable="true"/>
    </RadioGroup>
    
    
</RelativeLayout>

